<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class="blogs content">
        <h2>All blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                    <div class="card">
                        <h3 class="title"><%= blog.title%></h3>
                        <p class="snippet"><%= blog.snippet%></p>
                        <a class="read-more" href="/blogs/<%= blog._id%>">Read more</a>
                    </div>
                    
            <% }) %>
        <% } else { %>
            <p>No blogs to read</p>
        <% } %>
    </div>

    <%- include("../partials/footer.ejs") %>
</body>
</html>